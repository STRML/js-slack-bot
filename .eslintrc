{
  "root": true,
  "extends": "eslint:recommended",
  "rules": {
    "strict": 0,
    "quotes": [0, "single"],
    "curly": [1, "multi-line"],
    "camelcase": 0,
    "comma-dangle": 0,
    "dot-notation": 0,
    "no-console": 0,
    "no-debugger": 2,
    "no-use-before-define": [1, "nofunc"],
    "no-underscore-dangle": 0,
    "new-cap": 0,
    "prefer-const": 1,
    "semi": [1, "always"]
  },
  env: {
    "browser": true,
    "node": true,
    "es6": true
  }
}
